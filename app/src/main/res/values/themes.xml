<resources>
    <style name="AppTheme" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/pixel_red</item>
        <item name="colorOnPrimary">@color/pixel_white</item>
        <item name="android:statusBarColor">@color/pixel_black</item>
        <item name="android:windowLightStatusBar">false</item>
    </style>

    <!-- Pixel Button Style -->
    <style name="PixelButton" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">true</item>
        <item name="android:fontFamily">monospace</item>
        <item name="android:textStyle">bold</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:elevation">8dp</item>
    </style>

    <!-- Pixel Input Style -->
    <style name="PixelInput" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">0dp</item>
        <item name="boxCornerRadiusTopEnd">0dp</item>
        <item name="boxCornerRadiusBottomStart">0dp</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="boxStrokeWidth">4dp</item>
        <item name="boxStrokeColor">@color/pixel_black</item>

        <item name="hintTextColor">#757575</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>