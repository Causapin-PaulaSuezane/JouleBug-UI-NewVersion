<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_background_home"
    android:orientation="vertical"
    android:padding="20dp"
    android:gravity="bottom">

    <!-- User Avatar -->
    <androidx.cardview.widget.CardView
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent">

        <ImageView
            android:id="@+id/ivDrawerAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/avatar_placeholder"
            android:scaleType="centerCrop" />
    </androidx.cardview.widget.CardView>

    <!-- User Name -->
    <TextView
        android:id="@+id/tvDrawerUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JouleBug User"
        android:textSize="20sp"
        android:textColor="@color/pixel_black"
        android:fontFamily="@font/pixelzone_0v6y4"
        android:textStyle="bold"
        android:shadowColor="@color/pixel_black"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="0"
        android:layout_marginBottom="4dp"/>

    <!-- User Level & XP -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvDrawerLevel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="LV 1"
            android:textSize="12sp"
            android:textColor="@color/pixel_black"
            android:fontFamily="@font/snowbell_wp4g9"
            android:textStyle="bold"
            android:background="@color/pixel_yellow"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_marginEnd="8dp"/>

        <TextView
            android:id="@+id/tvDrawerXP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="810/1000 XP"
            android:textSize="12sp"
            android:textColor="@color/pixel_green"
            android:fontFamily="@font/snowbell_wp4g9"
            android:textStyle="bold"
            android:shadowColor="@color/pixel_black"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="0"/>
    </LinearLayout>

</LinearLayout>