<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_welcome"
    android:padding="24dp">

    <!-- Logo with Lightning Bolt -->

    <!-- App Title -->
    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_marginTop="76dp"
        android:contentDescription="@string/app_logo"
        android:src="@drawable/ladybug_pixel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.579"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvAppTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="JouleBug"
        android:textSize="56sp"
        android:textColor="@color/pixel_red"
        android:fontFamily="@font/pixelzone_0v6y4"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        app:layout_constraintTop_toBottomOf="@id/ivLogo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Log In Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogin"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:text="LOG IN"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_red_pixel"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvAppTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Sign Up Button -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSignUp"
        android:layout_width="0dp"
        android:layout_height="70dp"
        android:layout_marginTop="16dp"
        android:text="SIGN UP"
        android:textSize="18sp"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_green_pixel"
        android:fontFamily="@font/worksans_regular"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/btnLogin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Divider with "or Sign-in with" text -->
    <View
        android:id="@+id/dividerLeft"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toBottomOf="@id/btnSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvDivider"
        app:layout_constraintHorizontal_weight="1"/>

    <TextView
        android:id="@+id/tvDivider"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="or\nSign-in with"
        android:textSize="10sp"
        android:textColor="@color/text_secondary"
        android:fontFamily="@font/worksans_regular"
        android:gravity="center"
        android:lineSpacingExtra="2dp"
        app:layout_constraintTop_toTopOf="@id/dividerLeft"
        app:layout_constraintBottom_toBottomOf="@id/dividerLeft"
        app:layout_constraintStart_toEndOf="@id/dividerLeft"
        app:layout_constraintEnd_toStartOf="@id/dividerRight"/>

    <View
        android:id="@+id/dividerRight"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginStart="8dp"
        android:background="@color/divider_color"
        app:layout_constraintTop_toTopOf="@id/dividerLeft"
        app:layout_constraintStart_toEndOf="@id/tvDivider"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="1"/>

    <!-- Social Login Buttons Container -->
    <LinearLayout
        android:id="@+id/socialButtonsContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/dividerLeft"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0">

        <!-- Google Sign-In Button -->
        <ImageButton
            android:id="@+id/btnGoogle"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/social_button_background"
            android:contentDescription="@string/google_signin"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_google" />

        <!-- Facebook Login Button -->
        <ImageButton
            android:id="@+id/btnFacebook"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/social_button_background"
            android:contentDescription="@string/facebook_login"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_facebook" />

        <!-- Discord Login Button -->
        <ImageButton
            android:id="@+id/btnDiscord"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/social_button_background"
            android:contentDescription="@string/discord_login"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_discord" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>