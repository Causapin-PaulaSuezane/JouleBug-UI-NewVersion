<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_cream">

    <!-- Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/header_background_red"
        android:padding="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_back"
            android:background="@drawable/button_red_pixel"
            android:paddingLeft="8dp"
            android:paddingTop="10dp"
            android:paddingRight="12dp"
            android:paddingBottom="12dp"
            android:contentDescription="Back"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ABOUT SDG"
            android:textSize="32sp"
            android:textColor="@color/pixel_white"
            android:fontFamily="@font/pixelzone_0v6y4"
            android:textStyle="bold"
            android:shadowColor="@color/pixel_black"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="0"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Introduction -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="OUR MISSION ðŸŒ"
                android:textSize="24sp"
                android:textColor="@color/pixel_black"
                android:fontFamily="@font/pixelzone_0v6y4"
                android:textStyle="bold"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="JouleBug is committed to supporting the United Nations Sustainable Development Goals through daily eco-actions and community engagement."
                android:textSize="14sp"
                android:textColor="@color/pixel_black"
                android:fontFamily="@font/worksans_regular"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="24dp" />

            <!-- SDG 11 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/pixel_white"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/border_black_thick">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/sdg_badge_background_blue"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ™ï¸"
                            android:textSize="32sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SDG 11"
                            android:textSize="20sp"
                            android:textColor="@color/pixel_white"
                            android:fontFamily="@font/snowbell_wp4g9"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Sustainable Cities and Communities"
                        android:textSize="18sp"
                        android:textColor="@color/pixel_black"
                        android:fontFamily="@font/snowbell_wp4g9"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Making cities and human settlements inclusive, safe, resilient and sustainable. Through JouleBug, we encourage actions that reduce waste, promote recycling, and improve urban environments."
                        android:textSize="12sp"
                        android:textColor="@color/pixel_black"
                        android:fontFamily="@font/worksans_regular"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLearnMoreSDG11"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LEARN MORE"
                        android:textSize="12sp"
                        android:textColor="@color/pixel_white"
                        android:fontFamily="@font/snowbell_wp4g9"
                        android:textStyle="bold"
                        android:background="@drawable/button_green_pixel"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- SDG 13 Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="@color/pixel_white"
                app:cardCornerRadius="0dp"
                app:cardElevation="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:background="@drawable/border_black_thick">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/sdg_badge_background_green"
                        android:padding="12dp"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸŒ¡ï¸"
                            android:textSize="32sp"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SDG 13"
                            android:textSize="20sp"
                            android:textColor="@color/pixel_white"
                            android:fontFamily="@font/snowbell_wp4g9"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Climate Action"
                        android:textSize="18sp"
                        android:textColor="@color/pixel_black"
                        android:fontFamily="@font/snowbell_wp4g9"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Taking urgent action to combat climate change and its impacts. Every eco-action you complete helps reduce carbon emissions and builds a sustainable future for generations to come."
                        android:textSize="12sp"
                        android:textColor="@color/pixel_black"
                        android:fontFamily="@font/worksans_regular"
                        android:lineSpacingExtra="4dp"
                        android:layout_marginBottom="12dp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btnLearnMoreSDG13"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="LEARN MORE"
                        android:textSize="12sp"
                        android:textColor="@color/pixel_white"
                        android:fontFamily="@font/snowbell_wp4g9"
                        android:textStyle="bold"
                        android:background="@drawable/button_green_pixel"
                        android:padding="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- All SDGs Button -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnAllSDGs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIEW ALL UN SDGs"
                android:textSize="14sp"
                android:textColor="@color/pixel_white"
                android:fontFamily="@font/snowbell_wp4g9"
                android:textStyle="bold"
                android:background="@drawable/button_red_pixel"
                android:padding="16dp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>